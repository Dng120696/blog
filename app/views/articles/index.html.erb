<h1>Articles Listing Page</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Description</th>
      <th> Action</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td> <%=article.id%> </td>
        <td> <%=article.title%> </td>
        <td> <%=article.body%> </td>    
        <td> <%= link_to 'Show', article_path(article)%></td>
        <td> <%= link_to 'Edit', edit_article_path(article)%></td>
        <td><%= link_to 'Delete', article_path(article),data: {turbo_confirm: "Are you sure?", turbo_method: :delete }%></td>
      </tr>
    <%end%>
  </tbody>
</table>
<br/>


<div>
  <%= link_to 'Create Article','/articles/new'%>
</div>